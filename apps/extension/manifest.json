{
  "manifest_version": 3,
  "name": "ScopeShield v3",
  "version": "0.0.1",
  "description": "Capture scope creep evidence without storing tokens.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*",
    "https://*.slack.com/*",
    "http://localhost:3000/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*"
    ]
  },
  "action": {
    "default_title": "ScopeShield",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "src/sw.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*",
        "https://*.slack.com/*"
      ],
      "js": [
        "src/platform.js",
        "src/selection.js",
        "src/evidence.js",
        "src/ui.js",
        "src/index.js"
      ],
      "run_at": "document_idle"
    }
  ]
}